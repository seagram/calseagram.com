---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
const displayDate = new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
    timeZone: "UTC",
});
---

<BaseLayout>
    <article>
        <header class="mb-6 text-center">
            <h1
                class="text-xl font-et-book tracking-widest uppercase"
            >
                {frontmatter.title}
            </h1>
            <p class="text-sm text-[#6b6864] mt-2 italic">
                {displayDate}
            </p>
        </header>
        <div class="prose prose-lg prose-stone hyphens-auto max-w-none">
            <slot />
        </div>
    </article>
    <footer class="mt-10 pt-6 border-t border-[#e5e4e0] text-sm text-[#6b6864]">
        <p>This post is 100% written by a human. It is licensed under <a href="https://creativecommons.org/licenses/by-sa/4.0/" class="underline hover:text-[#363431]">CC BY-SA 4.0</a>.</p>
        <p class="mt-2">Cal Seagram Â© 2022-2026</p>
    </footer>
</BaseLayout>
