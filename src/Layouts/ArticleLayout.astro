---
import "../styles/global.css";
import Head from "../components/Head.astro";
const { frontmatter } = Astro.props;
const displayDate = new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "UTC",
});
---

<html lang="en">
  <Head />
  <body class="bg-[#f2f1ed] flex justify-center font-special py-8">
    <div class="w-[700px] bg-[#faf9f5] shadow-sm px-8 py-10 min-h-[calc(100vh-4rem)] text-[#363431]">
      <article class="mb-24">
        <header class="mt-2 text-3xl mb-4">
          {frontmatter.title}
        </header>
        <div>
          <slot />
        </div>
      </article>
    </div>
  </body>
</html>
