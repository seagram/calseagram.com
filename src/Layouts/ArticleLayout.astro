---
import "../styles/global.css";
import Head from "../components/Head.astro";
const { frontmatter } = Astro.props;
const displayDate = new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "UTC",
});
---

<html lang="en">
  <Head />
  <body class="bg-slate-100 flex justify-center">
    <div class="w-full max-w-[700px] px-4 --font-special text-left">
      <article class="mb-24">
        <header class="mt-10 text-3xl mb-4">
          {frontmatter.title}
        </header>
        <div>
          <slot />
        </div>
      </article>
    </div>
  </body>
</html>
