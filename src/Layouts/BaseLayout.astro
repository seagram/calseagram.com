---
import "../styles/global.css";
import Head from "../components/Head.astro";
import Title from "../components/Title.astro";
import MenuBar from "../components/MenuBar.astro";

interface Props {
    currentPage: "writing" | "about" | "archive";
    bodyClass?: string;
}

const { currentPage, bodyClass = "" } = Astro.props;
---

<html lang="en">
    <Head />
    <body
        class:list={[
            "bg-[#faf9f5] sm:bg-[#f2f1ed] flex justify-center font-et-book py-0 sm:py-8 px-0 sm:px-3",
            bodyClass,
        ]}
    >
        <div
            class="w-full max-w-[700px] sm:bg-[#faf9f5] sm:shadow-sm px-4 sm:px-8 py-10 min-h-screen sm:min-h-[calc(100vh-4rem)] text-[#363431] flex flex-col"
        >
            <Title />
            <MenuBar currentPage={currentPage} />
            <slot />
        </div>
    </body>
</html>
