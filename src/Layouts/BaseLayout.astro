---
import "../styles/global.css";
import Head from "../components/Head.astro";
import Title from "../components/Title.astro";

interface Props {
    bodyClass?: string;
}

const { bodyClass = "" } = Astro.props;
---

<html lang="en">
    <Head />
    <body
        class:list={[
            "bg-bg flex justify-center font-et-book px-0 sm:px-3",
            bodyClass,
        ]}
    >
        <div
            class="w-full max-w-3xl px-4 sm:px-8 py-10 min-h-screen text-text flex flex-col"
        >
            <div class="px-2 sm:px-4">
                <Title />
                <slot />
            </div>
        </div>
    </body>
</html>
