---
interface Props {
    links: string[];
}

const { links } = Astro.props;
---

<aside class="mt-12 pt-6 border-t border-border" aria-labelledby="sources-heading">
    <h2 id="sources-heading" class="text-xs font-normal text-text-faint mb-3 uppercase tracking-widest">Sources</h2>
    <ol class="sources-list list-none p-0 ps-0 m-0 flex flex-wrap gap-x-4 gap-y-1">
        {
            links.map((link, i) => (
                <li class="text-[0.8125rem] text-text-faint">
                    <a href={link} target="_blank" rel="noopener noreferrer" class="text-link no-underline transition-colors hover:text-link-hover">
                        {new URL(link).hostname.replace(/^www\./, '')}
                    </a>
                </li>
            ))
        }
    </ol>
</aside>

<style>
    .sources-list li::before {
        content: counter(list-item) ".";
        margin-right: 0.25rem;
    }
</style>
